<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_app_settings"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Application Settings"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_app_settings_alt_black_48" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_timesheet_list_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn_app_settings"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Timesheet"
        android:textAlignment="gravity"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_punch_clock_black_48"
        app:iconGravity="textTop"
        app:iconSize="48dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_invoice_list_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn_app_settings"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/btn_timesheet_list_view"
        android:text="Timesheet"
        android:textAlignment="gravity"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_article_black_48"
        app:iconGravity="textTop"
        app:iconSize="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_app_history"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/btn_timesheet_list_view"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="History"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_work_history_black_48" />

