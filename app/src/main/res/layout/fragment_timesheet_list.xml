<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.TimesheetListFragment"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/timesheet_list_section_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/title_timesheet"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorSection" />

        <TableLayout
            android:id="@+id/timesheet_list_tbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timesheet_list_section_header"
            android:stretchColumns="0,1">

            <TableRow android:background="@color/design_default_color_secondary">
                <TextView
                    android:text="Date"
                    android:gravity="left"
                    android:padding="3dip" />
                <TextView
                    android:text="Hours"
                    android:gravity="right"
                    android:padding="3dip" />
                <TextView
                    android:text="Action"
                    android:gravity="left"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="13.03.2022"
                    android:gravity="left"
                    android:padding="3dip" />
                <TextView
                    android:text="7.5"
                    android:gravity="right"
                    android:padding="3dip" />
                <Button
                    android:id="@+id/btn_edit_1"
                    android:gravity="right"
                    android:drawableStart="@android:drawable/ic_menu_edit" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="14.03.2022"
                    android:gravity="left"
                    android:padding="3dip" />
                <TextView
                    android:text="7.5"
                    android:gravity="right"
                    android:padding="3dip" />
                <Button
                    android:id="@+id/btn_edit_2"
                    android:gravity="right"
                    android:drawableStart="@android:drawable/ic_menu_edit" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn_timesheet_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:drawableStart="@android:drawable/ic_menu_delete"
                    android:text="@string/btn_add"
                    android:textAllCaps="false"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>
    </RelativeLayout>
</FrameLayout>